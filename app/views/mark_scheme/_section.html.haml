// Partial for displaying a section when editing or creating a mark scheme
- unique_id = "section-#{section_index}"

.card.mb-2.mark-scheme-section{id: "mark-scheme-#{section_index}"}
  %a.card-header.d-flex.justify-content-between.align-items-center{
    "data-bs-toggle" => "collapse",
    href: "##{unique_id}",
    role: "button",
    "data-accordion-toggle" => "",
    "aria-expanded" => "true",
    "aria-controls" => unique_id}

    .fs-5{id: "section-title-#{section_index}"}= section_title
    %i.bi.bi-caret-right-fill

  .collapse.show{id: unique_id}
    .card-body
      .form-group
        %label.form-label{for: "maximum-marks-input-#{section_index}"} Maximum marks:
        %input.form-control.w-25.max-marks-input{
          type:"number",
          id: "maximum-marks-input-#{section_index}",
          min: 0,
          value: max_marks,
          onkeypress: "return event.charCode >= 48 && event.charCode <= 57"
        }

      %br

      .form-group
        %label.form-label{for: "description-textarea-#{section_index}"} Description
        %textarea.form-control{
          id: "description-textarea-#{section_index}",
          placeholder: "Description",
          rows: "5"
        }= section_description


      %button.btn.btn-outline-danger.mt-3.delete-section-button{id: "delete-#{unique_id}"} Delete section

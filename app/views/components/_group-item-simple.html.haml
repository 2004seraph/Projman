-# A partial for group items that have just a delete button and a piece of text

-# LOCAL VARIABLES:
-# item_text
-# deletion_action_url
-# name 

- form_action = defined?(deletion_action_url) ? deletion_action_url : '/placeholder_post_url'

%li.list-group-item.d-flex.ps-1.align-items-center.list-group-item-partial{'form_action': form_action}
  .d-flex.align-items-center
    %button.btn.btn-light.btn-sm.me-2.btn-delete{type: "button"}
      %i.bi.bi-x.text-secondary
    %span= item_text
    %input{ type: "hidden", name: "item_text", value: item_text, "item_text": ""}
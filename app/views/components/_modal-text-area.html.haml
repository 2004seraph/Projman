-# LOCAL VARIABLES:
-# modal_id
-# title
-# submission_url    (form POST submission URL)
-# prompt
-# form_input_id
-# form_input_name
-# confirm_text
-# confirm_onclick_function


.modal.fade{ id: modal_id, tabindex: "-1", "aria-labelledby": "#{modal_id}", "aria-hidden": "true" }
  .modal-dialog.modal-dialog-centered.modal-dialog-scrollable
    .modal-content
      = form_with(url: (defined?(submission_url) ? submission_url : '/placeholder_post_url'), method: :post, local: false) do |form|
        .modal-header
          %h1.modal-title.fs-5= title
          %button.btn-close{ "aria-label": "Close", "data-bs-dismiss": "modal", type: "button" }

        .modal-body
          .form-group.mb-2
            = form.label form_input_id, prompt, class: "mb-2 fs-6"
            = form.text_area form_input_name, id: form_input_id, class: "form-control fs-6", rows: "5", autocomplete: "off", required: "true", style: "resize:none"
          = yield

        .modal-footer
          %button.btn.btn-secondary{ type: "button", "data-bs-dismiss": "modal" } Close
          %button.btn.btn-primary{ type: "submit", "data-bs-dismiss": "modal", onclick: confirm_onclick_function }= confirm_text
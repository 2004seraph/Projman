-# Show all features students get for chosen project

.separating-section 
    .d-flex.align-items-center.justify-content-between

        %h2
            #{@linked_module.code} #{@linked_module.name} - #{@current_project.name}

        .flex-end
            -# LINK TO CREATE ISSUES PAGE OR MODAL????
            %button.btn.btn-primary.btn-m.m-2{type: "button", "data-bs-toggle": "modal",
               "data-bs-target": "#reportIssueModal"}
                %i.bi.bi-exclamation-circle.orange
                Report Issue

    %hr.divider

    = render partial: 'course_projects/components/pref-form-box'
    = render partial: 'course_projects/components/staff-info-box'
    = render partial: 'course_projects/components/team-info-box'
    = render partial: 'course_projects/components/deadlines-info-box'
    = render partial: 'course_projects/components/mark-scheme-box'
    = render partial: 'course_projects/components/team-chat-box'

.modal.fade{ id: "reportIssueModal", tabindex: "-1", "aria-labelledby": "reportIssueModal", "aria-hidden": "true", "data-disallow-confirm-empty-input": "" }
    .modal-dialog.modal-dialog-centered.modal-dialog-scrollable
        .modal-content
            .modal-header
                %h1.modal-title.fs-5= "Report Issue"
                %button.btn-close{ "aria-label": "Close", "data-bs-dismiss": "modal", type: "button" }

            .modal-body
                %h1.fs-6.fw-normal.fst-italic= "report issue here"
    
-# A partial that renders a single text entry field that can be confirmed on once non-empty

-# LOCAL VARIABLES:
-# modal_id
-# title
-# prompt
-# form_input_id
-# form_input_name
-# confirm_text
-# confirm_onclick_function

.modal.fade{ id: modal_id, tabindex: "-1", "aria-labelledby": "#{modal_id}", "aria-hidden": "true" }
  .modal-dialog.modal-dialog-centered.modal-dialog-scrollable
    .modal-content
      .modal-header
        %h1.modal-title.fs-5= title
        %button.btn-close{ "aria-label": "Close", "data-bs-dismiss": "modal", type: "button" }

      .modal-body
        .form-group
          %label.form-label{ for: form_input_id }= prompt
          %input.form-control{ type: "text", id: form_input_id, name: form_input_name, autocomplete: "off", required: "true" }

      .modal-footer
        %button.btn.btn-primary{ type: "submit", "data-bs-dismiss": "modal", onclick: confirm_onclick_function }= confirm_text
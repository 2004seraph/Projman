      .row.align-items-center
        .col
          %label.col-form-label.fs-6.me-3{for: "project-deadline"} Project Deadline
        .col-8
          .input-group{style: "width:fit-content"}
            = render partial: 'components/datepicker_input', locals: { id: 'project-deadline', placeholder_text: 'Select Date' }


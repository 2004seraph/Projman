            = render partial: 'components/datepicker_input', locals: {placeholder_text: 'Select Date' }

      %li.list-group-item.ps-1.d-flex.align-items-center.row
        .col.d-flex.align-items-center
          %button.btn.btn-light.btn-sm.me-2
            %i.bi.bi-x.text-secondary
          Mockups Showcase
        .col-8
          .input-group{style: "width:fit-content"}
            = render partial: 'components/datepicker_input', locals: {placeholder_text: 'Select Date' }

      %li.list-group-item.ps-1.d-flex.align-items-center.row
        .col.d-flex.align-items-center
          %button.btn.btn-light.btn-sm.me-2
            %i.bi.bi-x.text-secondary
